  <persistence-unit name="PU-Local" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/studypoints?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="test"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <!--<property name="eclipselink.logging.level" value="FINE"/>-->
      <property name="eclipselink.logging.level" value="INFO"/>
      <property name="eclipselink.canonicalmodel.subpackage" value="development"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
